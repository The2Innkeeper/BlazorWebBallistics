@using OldWebBallistics.Models

<div>
    <input type="range" min="1" max="60" @oninput="UpdateFrameRate" value="@Parameters.FrameRate" />
    Frame Rate: @Parameters.FrameRate fps
</div>

<div>
    <input type="range" min="0.1" max="5" step="0.1" @oninput="UpdateTimeScale" value="@Parameters.TimeScale" />
    Time scale: @Parameters.TimeScale
</div>

<div>
    <input type="range" min="10" max="100" @oninput="UpdateSpeed" value="@Parameters.InitialSpeed" /> Initial Speed: @Parameters.InitialSpeed m/s
</div>
<div>
    <input type="range" min="1" max="90" @oninput="UpdateAngle" value="@Parameters.Angle" /> Angle: @Parameters.Angle degrees
</div>
<div>
    <input type="range" min="1" max="20" step="0.01" @oninput="UpdateGravity" value="@Parameters.Gravity" /> Gravity: @Parameters.Gravity m/s^2
</div>

